@{
    ViewData["Title"] = "Add News Page";
}
@model AddNewsViewModel
@inject ICategoryInterface categoryInterface

<h3 class="text-center">Add new</h3>
        <hr />

        <form asp-controller="news" asp-action="add" enctype="multipart/form-data" method="post">
            <div class="container mt-3 custom-input">
                <label asp-for="Title" class="form-label">Post title</label>
                <div class="input-group mb-3">
                    <input asp-for="Title" type="text" class="form-control">
                </div>                
                <span asp-validation-for="Title" class="text-danger"></span><br>

                <label asp-for="Body" class="form-label">Post body</label>
                <div class="input-group mb-3">
                    <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                </div>
                <span asp-validation-for="Body" class="text-danger"></span><br>

                <label asp-for="CategoryId" class="form-label">Category</label>
                <div class="input-group mb-3">
                    <select asp-for="CategoryId" class="form-control" rows="5">
                        <option selected disabled>-- Select Category --</option>
                        @foreach (var item in categoryInterface.GetCategories())
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <label asp-for="ImageFile" class="form-label">Post photo</label>
                <div class="input-group mb-3">
                    <input asp-for="ImageFile" accept="image/*" type="file" class="form-control">
                </div>
            </div>

            <div class="button-group">
                <a asp-controller="news" asp-action="index" class="btn btn-dark">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>